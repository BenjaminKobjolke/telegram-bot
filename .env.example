# Telegram Bot Configuration
# Copy this file to .env and fill in your values

# Required: Your Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Required: Channel ID (with @ prefix) or numeric ID (starts with -100)
TELEGRAM_CHANNEL_ID=@your_channel

# Optional: Base URL for send_url_sync method
TELEGRAM_BASE_URL=https://your-server.com

# Optional: Message parse mode (HTML or Markdown)
TELEGRAM_PARSE_MODE=HTML

# Optional: Polling timeout in seconds
TELEGRAM_POLL_TIMEOUT=30

# Optional: Retry delay in seconds on error
TELEGRAM_RETRY_DELAY=5.0

# Optional: Delay between message sends in seconds
TELEGRAM_SEND_DELAY=0.1
